type Recipe {
    id: ID!
    name: String!
    planned: Boolean!
}

type Query {
  recipes: [Recipe!]!
}

type Result {
    status: Status!
}

enum Status {
    Success
    Error
    NotFound
}

input NewRecipe {
    id: ID!
    name: String!
}

type Mutation {
  createRecipe(input: NewRecipe!): Recipe!
  planRecipe(id: ID!): Result!
}
